<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.and2.homework.and.homework.s01.fragment.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_detailsPostFragment"
            app:destination="@id/detailsPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/newPostFragment"
        android:name="com.example.and2.homework.and.homework.s01.fragment.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" />
    <fragment
        android:id="@+id/editPostFragment"
        android:name="com.example.and2.homework.and.homework.s01.fragment.EditPostFragment"
        android:label="EditPostFragment" />
    <fragment
        android:id="@+id/detailsPostFragment"
        android:name="com.example.and2.homework.and.homework.s01.fragment.DetailsPostFragment"
        android:label="DetailsPostFragment" >
        <action
            android:id="@+id/action_detailsPostFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
    </fragment>
</navigation>